{
    "name": "svelte-crop-window",
    "version": "0.2.0",
    "description": "A Svelte component to crop images and videos with touch and mouse gestures",
    "homepage": "https://sabine.github.io/svelte-crop-window",
    "repository": {
        "type": "git",
        "url": "https://github.com/sabine/svelte-crop-window"
    },
    "author": "Sabine Schmaltz <info@sabineschmaltz.de>",
    "license": "MIT",
    "keywords": [
        "cropper",
        "crop window",
        "image crop",
        "video crop",
        "svelte",
        "svelte component"
    ],
    "scripts": {
        "dev": "vite dev --port 3000 --host",
        "gh-pages": "vite build && node gh-pages.cjs",
        "build": "svelte-kit sync && svelte-package && node clean-dependencies.js",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --plugin-search-dir . --check . && eslint .",
        "format": "prettier --plugin-search-dir . --write ."
    },
    "devDependencies": {
        "@sveltejs/adapter-static": "^2.0.3",
        "@sveltejs/kit": "^1.25.2",
        "@sveltejs/package": "^2.2.2",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "eslint": "^8.51.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-svelte": "^2.34.0",
        "gh-pages": "^6.0.0",
        "prettier": "^3.0.3",
        "prettier-plugin-svelte": "^3.0.3",
        "svelte": "^4.2.1",
        "svelte-check": "^3.5.2",
        "svelte-highlight": "^7.4.1",
        "svelte-preprocess": "^5.0.4",
        "tslib": "^2.6.2",
        "typescript": "^5.2.2",
        "vite": "^4.4.11"
    },
    "type": "module",
    "dependencies": {
    }
}
